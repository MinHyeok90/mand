<h1>새로운 만다라트 작성</h1>
<!--one mandalart-->
<form action="/home/write" method="POST">
  <div class="form-group">
    <label for="subject">제목</label>
    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="제목을 작성해 주세요">
  </div>
  <div class="row">
    <% (1..9).each do |i|%>
      <div class="row">
        <div class="col-xs-1"></div>
        <% (1..9).each do |j| %>
          <% if i== 5 && j==5 %>
            <div class="col-xs-1"><textarea class="form-control" rows="4" name="box<%=i%><%=j%>" id="box<%=i%><%=j%>"
            style="color:red;" placeholder="도달하고 싶은 목표를 구체적으로 작성해 주세요 "></textarea></div>
          <% else %>
            <div class="col-xs-1"><textarea class="form-control" rows="4" name="box<%=i%><%=j%>" id="box<%=i%><%=j%>"
            ></textarea></div>
          <% end %>
          <% if j%3 ==0 %>
            <div class="col-xs-1"></div>
          <% end %>
        <% end %>
        <div class="col-xs-1"></div>
      </div>
        <% if i%3 == 0%>
          <br><br>
        <% end %>
    <% end %>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
